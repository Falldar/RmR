@model IEnumerable<RmR.Models.Resume>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResumeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <strong>@Html.ActionLink(item.ResumeName, "Details", new { id = item.ResumeID })</strong>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedOn)
            </td>
            <td>
                @switch ((int)item.Status)
                {
                    case (0):
                        @Html.ActionLink("Submitted", "Edit", new { id = item.ResumeID }, new { @class = "btn btn-primary disabled" })
                        break;
                    case (1):
                        @Html.ActionLink("On Review", "Edit", new { id = item.ResumeID }, new { @class = "btn btn-warning disabled" })
                        break;
                    case (2):
                        @Html.ActionLink("Completed", "Edit", new { id = item.ResumeID }, new { @class = "btn btn-default disabled" })
                        break;
                    default:
                        break;
                }
            </td>
        </tr>
    }

</table>
