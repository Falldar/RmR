@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/img/birds.jpg" alt="Chania">
        </div>

        <div class="item">
            <img src="~/img/bird.jpg" alt="Chani">
        </div>

        <div class="item">
            <img src="~/img/water.jpg" alt="Flower">
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- end slider -->

<div class="row">

    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Please log in to our website to submit us your resume and a brief description so we can assess your resume
            and send you a FREE revision!!
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Login", "Account")">Log in Now &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Online Ressources</h2>
        <p>
            Click brlow for a complete guide on how to build your resume and a full list of helpful tools to assist you in
            making the perfect first impression.
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Quicktools", "Home")">Quick Tools  &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Who We Are</h2>
        <p>Don't trust your most important 1-2 page document to anyone. Find out who we are and what makes us special.</p>
        <p><a class="btn btn-default" href="@Url.Action("About", "Home")">About Us &raquo;</a></p>
    </div>
</div>
