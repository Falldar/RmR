@model RmR.Models.Resume

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Resume</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Client.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResumeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResumeName)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd>
            @switch ((int)Model.Status)
            {
                case (0):
                    @Html.ActionLink("Download Resume", "downloadFile", new { id = Model.ResumeID }, new { @class = "btn btn-sm btn-primary" })
                    break;
                case (1):
                    @Html.ActionLink("Upload Completed Resume", "Edit", new { id = Model.ResumeID }, new { @class = "btn btn-sm btn-warning" })
                    break;
                case (2):
                    @Html.ActionLink("Completed", "Edit", new { id = Model.ResumeID }, new { @class = "btn btn-sm btn-default disabled" })
                    break;
                default:
                    break;
            }
        </dd>

        

    </dl>
</div>
<p>
    @Html.ActionLink("Back to Current Work", "Index", null, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to Available Work", "Work", null, new { @class = "btn btn-primary" })
</p>
