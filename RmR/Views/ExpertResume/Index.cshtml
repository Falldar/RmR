@model IEnumerable<RmR.Models.Resume>

@{
    ViewBag.Title = "List of Resumes";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <tr>
        <th>
            TO CODE - FULL NAME
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResumeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            TO CODE - Assigned toooooo
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <strong>@Html.ActionLink("TO CODE - FULL NAME", "Details", new { id = item.ResumeID })</strong>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResumeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompletedOn)
        </td>
        <td>
            @switch ((int)item.Status)
            {
                case (0):
                    @Html.ActionLink("Download", "Edit", new { id = item.ResumeID },new { @class = "btn btn-warning" })
                    break;
                case (1):
                    @Html.ActionLink("Upload", "Edit", new { id = item.ResumeID }, new { @class = "btn btn-success" })
                    break;
                case (2):
                    @Html.ActionLink("Completed", "Edit", new { id = item.ResumeID }, new { @class = "btn btn-default disabled" })
                    break;
                default:
                    break;
            }
        </td>
        <td>
            TO CODE - INITIALS
        </td>
    </tr>
}

</table>
